<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="15dp"
        app:cardCornerRadius="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingEnd="12dp"
            android:paddingRight="12dp">

            <ImageView
                android:id="@+id/repoImg"
                android:layout_width="105dp"
                android:layout_height="105dp"
                android:layout_margin="12dp" />

            <TextView
                android:id="@+id/detail_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:layout_toRightOf="@+id/repoImg"
                android:maxEms="10"
                android:text=""
                android:textSize="20sp" />

            <TextView
                android:id="@+id/login_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detail_name"
                android:layout_toRightOf="@+id/repoImg"
                android:text="priyank28"
                android:textSize="16sp" />

            <ImageView
                android:id="@+id/location_img"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_below="@+id/login_name"
                android:layout_toRightOf="@+id/repoImg"
                android:src="@drawable/ic_location_on_black_24dp"/>
            <TextView
                android:id="@+id/location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/login_name"
                android:layout_marginLeft="2dp"
                android:layout_toRightOf="@+id/location_img"
                android:text="unidentified"
                android:textSize="15sp" />

            <LinearLayout
                android:id="@+id/l_following"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/repoImg"
                android:layout_alignBottom="@+id/repoImg"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/followers"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Followers "
                    android:textSize="12sp" />

                <TextView
                    android:id="@+id/following"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:layout_below="@+id/detail_name"
                    android:text="Following "
                    android:textSize="12sp" />
            </LinearLayout>
        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>